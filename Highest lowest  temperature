#include <stdio.h>

int main() {
    float temp[7];
    float highest, lowest;
    int i;

    printf("Enter temperatures for 7 days:\n");

    for (i = 0; i < 7; i++) {
        printf("Day %d: ", i + 1);
        scanf("%f", &temp[i]);
    }

    highest = lowest = temp[0];

    for (i = 1; i < 7; i++) {
        if (temp[i] > highest)
            highest = temp[i];

        if (temp[i] < lowest)
            lowest = temp[i];
    }

    printf("\nHighest Temperature = %.2f\n", highest);
    printf("Lowest Temperature  = %.2f\n", lowest);

    return 0;
}
