#include <stdio.h>
#include <string.h>

struct Item {
    int id;
    char name[30];
    int qty;
    float price;
};

int main() {
    struct Item inventory[50];
    int n = 0, choice, i, searchId, found;

    do {
        printf("\n--- Inventory Menu ---\n");
        printf("1. Add Item\n2. Display Items\n3. Search Item\n4. Update Item\n5. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1: // Add
                printf("Enter ID: "); scanf("%d", &inventory[n].id);
                printf("Enter Name: "); scanf("%s", inventory[n].name);
                printf("Enter Quantity: "); scanf("%d", &inventory[n].qty);
                printf("Enter Price: "); scanf("%f", &inventory[n].price);
                n++;
                printf("Item added.\n");
                break;

            case 2: // Display
                if(n==0) printf("No items.\n");
                else {
                    printf("\n--- Inventory Items ---\n");
                    for(i=0;i<n;i++)
                        printf("ID:%d, Name:%s, Qty:%d, Price:%.2f\n",
                               inventory[i].id, inventory[i].name, inventory[i].qty, inventory[i].price);
                }
                break;

            case 3: // Search
                printf("Enter ID to search: "); scanf("%d", &searchId);
                found=0;
                for(i=0;i<n;i++)
                    if(inventory[i].id==searchId) {
                        printf("Found: ID:%d, Name:%s, Qty:%d, Price:%.2f\n",
                               inventory[i].id, inventory[i].name, inventory[i].qty, inventory[i].price);
                        found=1; break;
                    }
                if(!found) printf("Item not found.\n");
                break;

            case 4: // Update
                printf("Enter ID to update: "); scanf("%d", &searchId);
                found=0;
                for(i=0;i<n;i++)
                    if(inventory[i].id==searchId) {
                        printf("New Name: "); scanf("%s", inventory[i].name);
                        printf("New Qty: "); scanf("%d", &inventory[i].qty);
                        printf("New Price: "); scanf("%f", &inventory[i].price);
                        printf("Item updated.\n"); found=1; break;
                    }
                if(!found) printf("Item not found.\n");
                break;

            case 5:
                printf("Exiting...\n");
                break;

            default:
                printf("Invalid choice!\n");
        }
    } while(choice != 5);

    return 0;
}
