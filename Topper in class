#include <stdio.h>

int main() {
    int n, i;
    int marks[50];
    int topperIndex = 0;

    printf("Enter number of students: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("Enter marks of student %d: ", i + 1);
        scanf("%d", &marks[i]);
    }

    for (i = 1; i < n; i++) {
        if (marks[i] > marks[topperIndex]) {
            topperIndex = i;
        }
    }

    printf("\nTopper of the class:\n");
    printf("Student Number: %d\n", topperIndex + 1);
    printf("Highest Marks : %d\n", marks[topperIndex]);

    return 0;
}
