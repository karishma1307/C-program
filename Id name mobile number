#include <stdio.h>
#include <string.h>

struct Customer {
    int id;
    char name[50];
    char mobile[15];
};

int main() {
    int n, i, searchId, found = 0;
    printf("Enter number of customers: ");
    scanf("%d", &n);

    struct Customer c[n];

    for(i = 0; i < n; i++) {
        printf("\nID: "); scanf("%d", &c[i].id);
        printf("Name: "); scanf("%s", c[i].name);
        printf("Mobile: "); scanf("%s", c[i].mobile);
    }

    printf("\nEnter Customer ID to search: ");
    scanf("%d", &searchId);

    for(i = 0; i < n; i++) {
        if(c[i].id == searchId) {
            printf("\nCustomer Found:\nID: %d\nName: %s\nMobile: %s\n", c[i].id, c[i].name, c[i].mobile);
            found = 1;
            break;
        }
    }

    if(!found) printf("\nCustomer with ID %d not found.\n", searchId);

    return 0;
}
