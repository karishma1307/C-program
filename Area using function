#include <stdio.h>

float calculateArea(float length, float width)
{
    return length * width;
}

int main()
{
    float length, width, area;

    printf("Enter length: ");
    scanf("%f", &length);

    printf("Enter width: ");
    scanf("%f", &width);

    area = calculateArea(length, width);

    printf("Area of rectangle = %.2f", area);

    return 0;
}
