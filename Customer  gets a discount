#include <stdio.h>

int main() {
    float billAmount;
    float discountThreshold = 1000.0;  // Minimum bill amount to get discount
    float discountPercent = 10.0;      // Discount percentage
    float discount = 0.0;

    printf("Enter bill amount: ");
    scanf("%f", &billAmount);

    if (billAmount >= discountThreshold) {
        discount = (billAmount * discountPercent) / 100;
        printf("Congratulations! You get a discount of %.2f\n", discount);
        printf("Total amount to pay after discount = %.2f\n", billAmount - discount);
    } else {
        printf("Sorry! You are not eligible for discount.\n");
        printf("Total amount to pay = %.2f\n", billAmount);
    }

    return 0;
}
